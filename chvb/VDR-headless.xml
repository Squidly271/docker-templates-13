  <Description>VDR is a DVB Server Software, but running on Linux.[br]
  [b][u][span style='color: #E80000;']Configuration[/span][/u][/b][br]
  [b]Port 39876:[/b] Administrative Configuration [br]
  [b]Port 2222:[/b] SSH Server Port Login with User:docker / Passwort:test123 [br]
  </Description>
  <Project>http://tvdr.de/</Project>
  <Registry>https://hub.docker.com/r/chriszero/vdr-headless/</Registry>
  <Repository>chriszero/vdr-headless</Repository>
  <BindTime>true</BindTime>
  <Privileged>false</Privileged>
  <Environment>
  </Environment>
  <Networking>
    <Mode>bridge</Mode>
    <Publish>
      <Port>
        <HostPort>2004</HostPort>
        <ContainerPort>2004</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
        <Port>
        <HostPort>3000</HostPort>
        <ContainerPort>3000</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
      <Port>
        <HostPort>4010-4020</HostPort>
        <ContainerPort>4010-4020</ContainerPort>
        <Protocol>udp</Protocol>
      </Port>
        <Port>
        <HostPort>6419</HostPort>
        <ContainerPort>6419</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
        <Port>
        <HostPort>34890</HostPort>
        <ContainerPort>34890</ContainerPort>
        <Protocol>tcp</Protocol>
      </Port>
    </Publish>
  </Networking>
  <Data>
    <Volume>
      <HostDir>/mnt/user/appdata/VDR/vdrconfig</HostDir>
      <ContainerDir>/vdr/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
      <Volume>
      <HostDir>/mnt/user/appdata/VDR/etcvdr/</HostDir>
      <ContainerDir>/etc/vdr</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
      <Volume>
      <HostDir>/mnt/user/Aufnahmen/</HostDir>
      <ContainerDir>/recordings</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
      <Volume>
      <HostDir>/mnt/user/appdata/VDR/cache</HostDir>
      <ContainerDir>/vdr/cache</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
      <Volume>
      <HostDir>/mnt/user/appdata/VDR/epgd</HostDir>
      <ContainerDir>/epgd/config</ContainerDir>
      <Mode>rw</Mode>
    </Volume>
  </Data>
  <Version>1.0</Version>
  <WebUI>https://[IP]:[PORT:8001]/</WebUI>
  <Banner>https://raw.githubusercontent.com/chvb/docker-templates/master/chvb/img/VDR.jpg</Banner>
  <Icon>https://raw.githubusercontent.com/chvb/docker-templates/master/chvb/img/VDR.jpg</Icon>
